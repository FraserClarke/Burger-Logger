<h2>Uneaten Burger</h2>

<ul>
  {{#each burgers}}
  {{#unless devoured}}
  {{> burgers/burgers-block devoured=true}}
  {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burger!</h2>

<ul>
  {{#each burgers}}
  {{#if devoured}}
  {{> burgers/burger-block devoured=false}}
  {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form id="create-form">

  <div class="form-group">
    <label for="burg">Add burger:</label>
    <input type="text" id="burg" name="name">
  </div>


  <button type="submit">Submit</button>
</form>