<h2>Uneaten Burger</h2>

<ul>
  {{#each burgers}}
  {{#unless devoured}}
  {{> cats/cat-block sleep=true}}
  {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burger!</h2>

<ul>
  {{#each cats}}
  {{#if sleepy}}
  {{> cats/cat-block sleep=false}}
  {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form id="create-form">

  <div class="form-group">
    <label for="ca">Add burger:</label>
    <input type="text" id="ca" name="name">
  </div>


  <button type="submit">Submit</button>
</form>